{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "customTemplates": [
        {
            "name": "alh-home",
            "postTypes": ["page"],
            "title": "ALH Home Page"
        },
        {
            "name": "alh-simple-page",
            "postTypes": ["page"],
            "title": "ALH Simple"
        },
        {
            "name": "alh-banner",
            "postTypes": ["page"],
            "title": "ALH Banner Page"
        }
    ],
    "settings": {
        "color": {
            "palette": [
                {
                    "color": "#545DA9",
                    "name": "ALH Purple",
                    "slug": "alh-purple"
                },
                {
                    "color": "#ffffff",
                    "name": "White",
                    "slug": "white"
                },
                {
                    "color": "#000000",
                    "name": "Black",
                    "slug": "black"
                }
            ]
        },
        "layout": {
            "contentSize": "920px"
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFace": [
                        {
                            "fontFamily": "Source Sans Pro",
                            "fontWeight": "400",
                            "src": ["file: ./assets/fonts/source-sans-pro/SourceSansPro-Regular.woff2"]
                        }
                    ],
                    "fontFamily": "Source Sans Pro",
                    "name": "Source Sans Pro",
                    "slug": "primary"
                }
            ]
        }
    },
    "styles": {
        "blocks": {
            "core/navigation": {
                "elements": {
                    "link": {
                        ":hover": {
                            "typography": {
                                "textDecoration": "none"
                            }
                        }
                    }
                }
            }
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--primary)",
                    "fontWeight": "700"
                }
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--primary)"
        }
    }
}
